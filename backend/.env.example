# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/finance_api_development
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_api_development
DB_USER=postgres
DB_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
PORT=3000

# Security
JWT_SECRET=your_jwt_secret_here
RAILS_MASTER_KEY=your_rails_master_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RACK_ATTACK_ALLOWLIST=127.0.0.1,::1
RACK_ATTACK_BLOCKLIST=

# Logging
RAILS_LOG_TO_STDOUT=true
LOG_LEVEL=info

# Monitoring
ENABLE_HEALTH_CHECKS=true

# Email Configuration - For future use
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_DOMAIN=

# External APIs - For future integrations
SUPABASE_URL=https://finance-app-demo.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# Backend - Render Environment Variables
# ========================================

# Supabase Database Configuration
# Get from: Supabase Dashboard → Settings → Database → Connection String (URI)
# Use the pooler URL for better performance
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxxx:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true

# Rails Configuration
RAILS_ENV=production
RAILS_LOG_TO_STDOUT=true
RAILS_SERVE_STATIC_FILES=true
SECRET_KEY_BASE=your_secret_key_base_here_generate_with_rails_secret

# Application Settings
RAILS_MAX_THREADS=5

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_generate_with_rails_secret

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Optional: Redis (if using Sidekiq)
REDIS_URL=redis://your-redis-url:6379/0

# Optional: Email Configuration (if using ActionMailer)
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587
SMTP_DOMAIN=example.com
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Frontend - Vercel Environment Variables
# =========================================

# API Configuration
NEXT_PUBLIC_API_URL=https://your-backend.onrender.com
NEXT_PUBLIC_API_TIMEOUT=30000

# Application Settings
NODE_ENV=production
